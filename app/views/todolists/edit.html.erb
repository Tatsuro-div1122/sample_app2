<h1>編集画面</h1>
<%= form_for(@list, url:"/todolists/#{@list.id}") do |f| %>
  <% if @list.errors.any? %>
    <h2><%= @list.errors.count %>件のエラーが発生しました</h2>
    <% @list.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
    <% end %>
  <% end %>
  
	<h4>タイトル</h4>
	<%= f.text_field :title %>
	<h4>本文</h4>
	<%= f.text_area :body %>
	<%= f.submit '保存' %>
<% end %>